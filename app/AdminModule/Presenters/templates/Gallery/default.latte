{block content}
    <div class="content">
            <!-- Start Content-->
            <div class="container-fluid">

                <div class="row page-title">
                    <div class="col-md-12">
                        <nav aria-label="breadcrumb" class="float-right mt-1">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{$basePath}/admin">Galerie</a></li>
                            </ol>
                        </nav>
                        <h4 class="mb-1 mt-0">Galerie</h4>
                    </div>
                </div>
            </div> <!-- container-fluid -->
        </div> <!-- content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title mt-0 mb-3">Galerie</h4>
                        <a n:href="Gallery:create" title="" class="btn btn-success mb-3">Přidat</a>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">Obrázek</th>
                                        <th scope="col">Odstranit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {foreach $gallery as $value}
                                        <tr>
                                            <td>
                                                <img src="{$basePath}/content/gallery/{$value->id}.{$value->extension}" alt="" height="100">
                                            </td>
                                            <td>
                                                <a n:href="Gallery:delete $value->id" title="Delete" class="text-dark"><i data-feather="trash"></i></a>
                                            </td>
                                        </tr>
                                    {/foreach}
                                </tbody>
                            </table>
                        </div>
                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div>
            <!-- end col-12 -->
        </div> <!-- end row -->
{/block}